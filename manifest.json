{
    
  "manifest_version": 2,
  "name": "Flash Clip",
  "version": "1.0",

  "description": "Gestisci appunti sui tuoi siti preferiti in un'unica app, ovunque.",
  "icons": {
      "32": "icons/logo.svg"
    },
    
    "applications": {
        "gecko": {
            "id": "flash-clip_addon@example.com"
        }
    },
    
  "permissions": [
        "activeTab",
        "storage"
  ],
  
  "browser_action": {
    "default_icon": "icons/logo.svg",
    "default_title": "Flash Clip",
    "default_popup": "index.html"
  }
  
}
